---
import { Card, CardHeader, CardTitle, CardContent } from "@/components/ui/card";
---

<section class="py-20 bg-white">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-12 text-[#0D2845]">Areas of Expertise</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {[
        {
          title: "Planning Services",
          items: ["Retirement Planning", "Estate Planning", "Tax Planning"]
        },
        {
          title: "Risk Management",
          items: ["Insurance Analysis", "Portfolio Protection", "Risk Assessment"]
        },
        {
          title: "Investment Services",
          items: ["Portfolio Management", "Asset Allocation", "Investment Strategy"]
        },
        {
          title: "Business Services",
          items: ["Succession Planning", "Business Valuation", "Employee Benefits"]
        },
        {
          title: "Education Services",
          items: ["College Planning", "Financial Education", "Retirement Workshops"]
        }
      ].map((service) => (
        <Card>
          <CardHeader>
            <CardTitle class="text-[#0D2845]">{service.title}</CardTitle>
          </CardHeader>
          <CardContent>
            <ul class="space-y-2">
              {service.items.map((item) => (
                <li class="text-gray-600">{item}</li>
              ))}
            </ul>
          </CardContent>
        </Card>
      ))}
    </div>
  </div>
</section>